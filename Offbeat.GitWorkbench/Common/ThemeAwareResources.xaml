<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Offbeat.GitWorkbench.Common">
	<Style x:Key="RepositoryOperationIndicatorBackground" TargetType="{x:Type Border}">
		<Setter Property="Background" Value="{DynamicResource AvalonDockThemeVs2013NavigatorWindowBackground}"></Setter>
		<Setter Property="CornerRadius" Value="8"></Setter>
		<Setter Property="Padding" Value="20"></Setter>
		<Setter Property="HorizontalAlignment" Value="Center"></Setter>
		<Setter Property="VerticalAlignment" Value="Center"></Setter>
	</Style>
</ResourceDictionary>